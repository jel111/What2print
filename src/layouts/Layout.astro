---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="">
			<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
				<button data-collapse-toggle="navbar-cta" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-50 rounded-lg md:hidden hover:bg-white focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-cta" aria-expanded="false">
				  <span class="sr-only">Open main menu</span>
				  <svg class="w-5 h-5 hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
					  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
				  </svg>
			  </button>
			</div>
			<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-cta">
			  <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
				<li>
				  <a href="#" class="block py-2 px-3 md:p-0 bg-blue-700 rounded md:bg-transparent md:text-gray-100 md:dark:text-blue-500" aria-current="page">Home</a>
				</li>
				<li>
				  <a href="#" class="block py-2 px-3 md:p-0 text-gray-100 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Print Tuesday</a>
				</li>
				<li>
				  <a href="#" class="block py-2 px-3 md:p-0 text-gray-100 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">3D Printers</a>
				</li>
				<li>
					<a href="#" class="block py-2 px-3 md:p-0 text-gray-100 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Filaments</a>
				  </li>
				<li>
				  <a href="#" class="block py-2 px-3 md:p-0 text-gray-100 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Blog</a>
				</li>
			  </ul>
			</div>
			</div>
		  </nav>
		  


		<main>
			<slot />
		</main>
		<script>
			document.addEventListener('DOMContentLoaded', function() {
			  const toggleButton = document.querySelector('[data-collapse-toggle]');
			  const navbarMenu = document.getElementById('navbar-cta');
	  
			  toggleButton.addEventListener('click', function() {
				navbarMenu.classList.toggle('hidden');
			  });
			});
		  </script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 58, 136, 234;
		--accent-light: 173, 216, 230; /* Light Blue */
		--accent-dark: 0, 0, 139; /* Dark Blue */
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #07073d;
		background-size: 224px;
	}
	/* code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	} */
	 nav {
		display: flex;
		justify-content: center;
		gap: 1rem;
		padding: 1rem;
		background-color: rgba(var(--accent-dark), 66%);
		margin-bottom: 2rem;
	}
	
	button[data-collapse-toggle] svg:hover {
		stroke: black;
	}

	button[data-collapse-toggle]:hover {
		background-color: white;
	}
</style>
