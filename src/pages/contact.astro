 ---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const posts = await Astro.glob('../pages/blog/posts/*.md');
---
<Layout title="What2Print Blog">

	<main>
		<h1><span class="text-gradient">What2Print</span><br>Contact</h1>
		<p class="instructions">
            Have a question, feedback, or a collaboration idea? I’d love to hear from you! Reach out using the form below, and I’ll get back to you as soon as possible.
		</p>
        <form action="https://formspree.io/f/{your_form_id}" method="POST">
            <label>
              Name
              <input type="text" name="name" required />
            </label>
            <label>
              Email
              <input type="email" name="email" required />
            </label>
            <label>
              Message
              <textarea name="message" required></textarea>
            </label>
            <button type="submit">Send Message</button>
          </form>
          <p>Or Reach Out Directly</p>
          <ul>
            <li>Email: <a href="mailto:info@3dprint.help">yourname@example.com</a></li>
            <li>Website: <a href="https://3dprint.help">Your Profile</a></li>
            <li>Twitter: <a href="https://twitter.com/devmobnow">@YourHandle</a></li>
          </ul>
		
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		background: rgba(var(--accent-dark), 50%);
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid rgba(var(--accent-light), 25%);
	}

	label {
		display: flex;
		flex-direction: column;
		font-weight: bold;
		color: rgb(var(--accent-light));
	}

	input[type="text"],
	input[type="email"],
	textarea {
		padding: 0.5rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		border-radius: 4px;
		background: rgba(var(--accent-dark), 30%);
		color: white;
		font-size: 1rem;
	}

	button[type="submit"] {
		padding: 0.75rem;
		background: var(--accent-gradient);
		border: none;
		border-radius: 4px;
		color: rgb(8, 19, 134);
		font-size: 1rem;
		cursor: pointer;
		transition: background 0.3s ease;
	}

	button[type="submit"]:hover {
		background-position: 100%;
	}

	p {
		margin-bottom: 1.5rem;
		color: rgb(var(--accent-light));
		font-size: 1.1rem;
		line-height: 1.8;
	}

	ul {
		list-style-type: none;
		padding: 0;
		margin: 1.5rem 0;
	}

	ul li {
		margin-bottom: 0.5rem;
		color: rgb(var(--accent-light));
		font-size: 1rem;
	}

	ul li a {
		color: var(--accent-gradient);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	ul li a:hover {
		color: rgb(8, 19, 134);
	}
</style>
